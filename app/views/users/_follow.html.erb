<% if current_user.is_following?(@user) %>
  <%= link_to user_unfollow_path(@user.id), method: :delete, data: { target: 'follow-button.link', action: 'ajax:success->follow#update' }, remote: true do %>
    <button class="btn btn-success ml-4">Unfollow</button>
  <% end %>
<% else %>
  <%= link_to user_follow_path(@user.id), method: :post, data: { target: 'follow-button.link', action: 'ajax:success->follow#update' }, remote: true do %>
    <button class="btn btn-success ml-4">Follow</button>
  <% end %>
<% end %>
