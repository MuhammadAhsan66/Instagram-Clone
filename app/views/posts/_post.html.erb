<div class="post">
  <p>By: </p> <a href = "<%= user_path(post.user) %>"> <%= post.user.name %> </a>

  <% if post.user.name == current_user.name %>
    <%= link_to 'Delete', post_path(post), method: :delete, data: { confirm: "Are you sure? \nYou want to delete this post?" }, class: "delete-post btn btn-danger" %>
  <% end %><br><br>

  <p>Photos: </p><br>
  <% post.photos.each do |photo| %>
    <%= image_tag photo.image.url(:standard), class: "photo" %>
  <% end %><br><br>

  <p>Caption: </p><%= post.caption %><br>
  <%= link_to 'View Post', post_path(post), class: "view-post btn btn-info" %>
  <% if post.user.name == current_user.name %>
    <%= link_to 'Edit Post', edit_post_path(post), class: "edit-post btn btn-dark" %>
  <% end %><br><br>

</div>
