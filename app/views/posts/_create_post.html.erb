<div>
  <%= form_for @post, :html => {:multipart => true} do |f| %>
    <%= f.hidden_field :user_id, value: current_user.id %>
    <%= f.text_field :caption, class: "form-control", placeholder: "What's on your mind?", required: true %><br>
    <%= file_field_tag "photos_list[]", class: "form-control", type: :file, multiple: true, required: true %><br>
    <%= f.submit "Post", class: "btn btn-primary" %>
  <% end %>
</div>
